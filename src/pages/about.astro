---
import BaseLayout from '../layouts/BaseLayout.astro';
import Reveal from '../components/Reveal.astro';
import { getEntry } from 'astro:content';
const page = await getEntry('pages','about');
---
<BaseLayout title={page.data.title} description={page.data.description}>
  <section class="mx-auto max-w-6xl px-4 pt-14 pb-10">
    <Reveal>
      <h1 class="text-4xl font-semibold">{page.data.title}</h1>
      <p class="mt-4 text-[rgb(var(--muted))] max-w-3xl">{page.data.description}</p>
    </Reveal>
  </section>
</BaseLayout>
