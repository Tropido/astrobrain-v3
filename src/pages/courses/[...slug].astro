---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Reveal from '../../components/Reveal.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const courses = await getCollection('courses');
  return courses.map((c) => ({ params: { slug: c.slug } }));
}

const courses = await getCollection('courses');
const slug = Astro.params.slug;
const course = courses.find((c) => c.slug === slug);
if (!course) return Astro.redirect('/courses');

const vendor = course.data.vendor || 'Certification';
const heroImg = course.data.heroImage || '/images/decor/blob.svg';
const tagline = course.data.heroTagline || 'Skills-first preparation with labs, practice, and a clear roadmap.';
const badges = course.data.heroBadges?.length
  ? course.data.heroBadges
  : [vendor, course.data.level || 'All levels', course.data.durationHours ? `${course.data.durationHours}h` : 'Flexible'];

const includes = course.data.includes?.length
  ? course.data.includes
  : [
      'Instructor-led sessions (remote / on-site / hybrid)',
      'Hands-on labs and guided practice',
      'Exam strategy + practice sets',
      'Certificate of completion',
    ];

const faq = course.data.faq?.length
  ? course.data.faq
  : [
      {
        q: 'Is this course suitable for beginners?',
        a: 'Yes. We provide a structured path and prerequisites guidance. If you are new, we recommend starting with Fundamentals-level courses where available.',
      },
      {
        q: 'Do you provide corporate (B2B) training?',
        a: 'Yes. We can tailor schedule, scope, and provide reporting for HR/IT stakeholders.',
      },
      {
        q: 'Is there exam practice included?',
        a: 'Yes. We focus on exam objectives with timed practice and review sessions.',
      },
    ];
---

<BaseLayout title={`${course.data.title} | Brain Higher School`} description={tagline}>
  <section class="mx-auto max-w-6xl px-4 pt-10 pb-6">
    <Reveal>
      <a href="/courses" class="text-sm text-[rgb(var(--muted))] hover:underline">← Back to courses</a>
    </Reveal>

    <!-- HERO -->
    <div class="mt-6 grid gap-8 lg:grid-cols-12 items-center">
      <div class="lg:col-span-7">
        <Reveal>
          <div class="flex flex-wrap gap-2">
            {badges.map((b) => (
              <span class="inline-flex items-center rounded-full border border-[rgb(var(--border))] bg-[rgb(var(--panel))] px-3 py-1 text-xs text-[rgb(var(--muted))]">
                {b}
              </span>
            ))}
          </div>
        </Reveal>

        <Reveal>
          <h1 class="mt-4 text-4xl md:text-5xl font-semibold leading-tight">
            {course.data.title}
          </h1>
        </Reveal>

        <Reveal>
          <p class="mt-4 text-lg text-[rgb(var(--muted))] leading-relaxed">
            {tagline}
          </p>
        </Reveal>

        <Reveal>
          <div class="mt-7 flex flex-col sm:flex-row gap-3">
            <a href="/contact" class="rounded-2xl px-5 py-3 text-white font-semibold bg-gradient-to-r from-[rgb(var(--brand))] to-[rgb(var(--brand2))] shadow-sm">
              Request enrollment / quote
            </a>
            <a href="#syllabus" class="rounded-2xl px-5 py-3 border border-[rgb(var(--border))] bg-[rgb(var(--panel))] hover:shadow-sm transition">
              View syllabus
            </a>
          </div>
        </Reveal>

        <Reveal>
          <div class="mt-6 grid gap-3 sm:grid-cols-3">
            <div class="rounded-3xl border border-[rgb(var(--border))] bg-[rgb(var(--panel))] p-4">
              <div class="text-xs text-[rgb(var(--muted))]">Delivery</div>
              <div class="mt-1 font-semibold">{(course.data.delivery || []).join(' · ')}</div>
            </div>
            <div class="rounded-3xl border border-[rgb(var(--border))] bg-[rgb(var(--panel))] p-4">
              <div class="text-xs text-[rgb(var(--muted))]">Duration</div>
              <div class="mt-1 font-semibold">{course.data.durationHours ? `${course.data.durationHours} hours` : 'Flexible'}</div>
            </div>
            <div class="rounded-3xl border border-[rgb(var(--border))] bg-[rgb(var(--panel))] p-4">
              <div class="text-xs text-[rgb(var(--muted))]">Level</div>
              <div class="mt-1 font-semibold">{course.data.level || 'All levels'}</div>
            </div>
          </div>
        </Reveal>
      </div>

      <div class="lg:col-span-5">
        <Reveal>
          <div class="relative rounded-[28px] border border-[rgb(var(--border))] bg-[rgba(var(--panel),.75)] backdrop-blur p-6 shadow-sm overflow-hidden">
            <img src={heroImg} alt="" class="absolute -right-24 -top-16 w-[520px] opacity-70" loading="lazy" />
            <div class="relative">
              <div class="flex items-center gap-3">
                <img src={`/images/vendors/${(vendor||'').toLowerCase()}.svg`} alt={vendor} class="h-10 w-auto" loading="lazy" />
                <div>
                  <div class="text-xs text-[rgb(var(--muted))]">Vendor</div>
                  <div class="font-semibold">{vendor}</div>
                </div>
              </div>
              <div class="mt-5 rounded-3xl border border-[rgb(var(--border))] bg-[rgb(var(--panel))] p-5">
                <div class="font-semibold">What’s included</div>
                <ul class="mt-3 space-y-2 text-sm text-[rgb(var(--muted))]">
                  {includes.slice(0, 5).map((x) => (
                    <li class="flex gap-2"><span>✔</span><span>{x}</span></li>
                  ))}
                </ul>
              </div>

              <div class="mt-4 text-xs text-[rgb(var(--muted))]">
                Designed for B2B and individuals · Hands-on labs · Exam readiness
              </div>
            </div>
          </div>
        </Reveal>
      </div>
    </div>
  </section>

  <!-- TRUST / VALUE -->
  <section class="mx-auto max-w-6xl px-4 py-10">
    <div class="grid gap-6 md:grid-cols-3">
      <Reveal class="rounded-3xl border border-[rgb(var(--border))] bg-[rgb(var(--panel))] p-7">
        <div class="font-semibold">Practical, job-ready skills</div>
        <p class="mt-2 text-sm text-[rgb(var(--muted))]">We teach what you’ll use at work — then map it directly to exam objectives.</p>
      </Reveal>
      <Reveal class="rounded-3xl border border-[rgb(var(--border))] bg-[rgb(var(--panel))] p-7">
        <div class="font-semibold">Labs + guided practice</div>
        <p class="mt-2 text-sm text-[rgb(var(--muted))]">Hands-on exercises and realistic scenarios to build confidence.</p>
      </Reveal>
      <Reveal class="rounded-3xl border border-[rgb(var(--border))] bg-[rgb(var(--panel))] p-7">
        <div class="font-semibold">Exam strategy</div>
        <p class="mt-2 text-sm text-[rgb(var(--muted))]">Timed practice, review sessions, and a revision plan to maximize your score.</p>
      </Reveal>
    </div>
  </section>

  <!-- SYLLABUS -->
  <section id="syllabus" class="mx-auto max-w-6xl px-4 py-10">
    <div class="grid gap-8 lg:grid-cols-12">
      <div class="lg:col-span-8">
        <Reveal class="rounded-3xl border border-[rgb(var(--border))] bg-[rgb(var(--panel))] p-8">
          <h2 class="text-2xl font-semibold">Syllabus</h2>
          <p class="mt-2 text-[rgb(var(--muted))]">A structured sequence you can follow week-by-week.</p>
          <ol class="mt-5 space-y-3 text-[rgb(var(--muted))]">
            {(course.data.modules?.length ? course.data.modules : ['Content will be added soon.']).map((m) => (
              <li class="flex gap-3">
                <span class="mt-0.5 inline-flex h-6 w-6 shrink-0 items-center justify-center rounded-full bg-[rgba(var(--brand),.12)] text-[rgb(var(--brand))] text-xs font-semibold">•</span>
                <span>{m}</span>
              </li>
            ))}
          </ol>
        </Reveal>

        <Reveal class="mt-6 rounded-3xl border border-[rgb(var(--border))] bg-[rgb(var(--panel))] p-8">
          <h2 class="text-2xl font-semibold">Outcomes</h2>
          <ul class="mt-5 space-y-3 text-[rgb(var(--muted))]">
            {(course.data.outcomes?.length ? course.data.outcomes : ['Become exam-ready with practical skills.']).map((o) => (
              <li class="flex gap-3"><span class="text-[rgb(var(--brand))]">✔</span><span>{o}</span></li>
            ))}
          </ul>
        </Reveal>
      </div>

      <div class="lg:col-span-4">
        <div class="lg:sticky lg:top-24">
          <Reveal class="rounded-3xl border border-[rgb(var(--border))] bg-[rgb(var(--panel))] p-7">
            <h3 class="text-lg font-semibold">Who it’s for</h3>
            <ul class="mt-4 space-y-2 text-sm text-[rgb(var(--muted))]">
              {(course.data.audience?.length ? course.data.audience : ['Learners preparing for this certification.']).map((a) => (
                <li class="flex gap-2"><span>•</span><span>{a}</span></li>
              ))}
            </ul>

            <h3 class="mt-6 text-lg font-semibold">Prerequisites</h3>
            <ul class="mt-4 space-y-2 text-sm text-[rgb(var(--muted))]">
              {(course.data.prerequisites?.length ? course.data.prerequisites : ['None.']).map((p) => (
                <li class="flex gap-2"><span>•</span><span>{p}</span></li>
              ))}
            </ul>

            {course.data.tools?.length ? (
              <>
                <h3 class="mt-6 text-lg font-semibold">Tools covered</h3>
                <div class="mt-3 flex flex-wrap gap-2">
                  {course.data.tools.map((t) => (
                    <span class="rounded-full border border-[rgb(var(--border))] bg-[rgba(var(--bg),.6)] px-3 py-1 text-xs text-[rgb(var(--muted))]">{t}</span>
                  ))}
                </div>
              </>
            ) : null}

            {course.data.exam ? (
              <div class="mt-6 rounded-3xl border border-[rgb(var(--border))] bg-[rgba(var(--bg),.6)] p-5">
                <div class="text-xs text-[rgb(var(--muted))]">Exam</div>
                <div class="mt-1 font-semibold">
                  {course.data.exam.name ?? ''}
                  {course.data.exam.version ? ` (${course.data.exam.version})` : ''}
                  {course.data.exam.code ? ` · ${course.data.exam.code}` : ''}
                </div>
              </div>
            ) : null}

            <div class="mt-6 flex flex-col gap-3">
              <a href="/contact" class="rounded-2xl px-5 py-3 text-white font-semibold bg-gradient-to-r from-[rgb(var(--brand))] to-[rgb(var(--brand2))] text-center">Request a quote</a>
              <a href="#faq" class="rounded-2xl px-5 py-3 border border-[rgb(var(--border))] bg-[rgba(var(--bg),.6)] hover:shadow-sm text-center">Read FAQ</a>
            </div>
          </Reveal>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section id="faq" class="mx-auto max-w-6xl px-4 py-12">
    <Reveal>
      <h2 class="text-2xl font-semibold">FAQ</h2>
      <p class="mt-2 text-[rgb(var(--muted))]">Common questions from learners and corporate clients.</p>
    </Reveal>

    <div class="mt-6 grid gap-3">
      {faq.map((item) => (
        <Reveal class="rounded-3xl border border-[rgb(var(--border))] bg-[rgb(var(--panel))] p-6">
          <details>
            <summary class="cursor-pointer font-semibold">{item.q}</summary>
            <p class="mt-3 text-sm text-[rgb(var(--muted))]">{item.a}</p>
          </details>
        </Reveal>
      ))}
    </div>

    <Reveal>
      <div class="mt-10 rounded-[32px] border border-[rgb(var(--border))] bg-gradient-to-r from-[rgba(var(--brand),.10)] to-[rgba(var(--brand2),.10)] p-8 flex flex-col md:flex-row items-start md:items-center justify-between gap-4">
        <div>
          <div class="font-semibold">Want a tailored learning plan?</div>
          <div class="text-sm text-[rgb(var(--muted))] mt-1">Tell us your timeline and goal — we’ll propose a path for your role.</div>
        </div>
        <a href="/contact" class="rounded-2xl px-5 py-3 text-white font-semibold bg-gradient-to-r from-[rgb(var(--brand))] to-[rgb(var(--brand2))]">Talk to an advisor</a>
      </div>
    </Reveal>
  </section>

  <!-- Extra animations: subtle parallax on hero image -->
  <script is:inline>
    const hero = document.querySelector('img[alt=""]');
    if(hero && !window.matchMedia('(prefers-reduced-motion: reduce)').matches){
      window.addEventListener('scroll', () => {
        const y = window.scrollY * 0.04;
        hero.style.transform = `translateY(${y}px)`;
      }, { passive: true });
    }
  </script>
</BaseLayout>
